@model PersonMvc.Models.Person

<form asp-action="Add" asp-controller="Home" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="FirstName">FirstName</label>
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">LastName</label>
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName">MiddleName</label>
            <input type="text" asp-for="MiddleName" />
            <span asp-validation-for="MiddleName"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add" />
        </div>
    </div>
</form>